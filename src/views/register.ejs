<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9ecef;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .register-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            width: 350px;
        }
        h2 { text-align: center; color: #333; margin-bottom: 20px; }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; color: #666; font-size: 14px;}
        input, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box; /* Quan trọng để không vỡ khung */
        }
        button {
            width: 100%;
            padding: 12px;
            background-color: #28a745; /* Màu xanh lá */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }
        button:hover { background-color: #218838; }
        .link { text-align: center; margin-top: 15px; font-size: 14px; }
        .link a { color: #007bff; text-decoration: none; }
        .link a:hover { text-decoration: underline; }
    </style>
</head>
<body>

    <div class="register-box">
        <h2>Đăng Ký</h2>
        
        <div class="form-group">
            <label>Tên đăng nhập</label>
            <input type="text" id="username" placeholder="Nhập username...">
        </div>

        <div class="form-group">
            <label>Mật khẩu</label>
            <input type="password" id="password" placeholder="Nhập mật khẩu...">
        </div>

        <div class="form-group">
            <label>Bạn là ai?</label>
            <select id="role">
                <option value="4">Khách hàng (Customer)</option>
                <option value="3">Nhân viên giao hàng (Staff)</option>
                <option value="2">Quản lý (Manager)</option>
                <option value="1">Admin</option>
            </select>
        </div>

        <button onclick="handleRegister()">Tạo tài khoản</button>

        <div class="link">
            Đã có tài khoản? <a href="/login">Đăng nhập ngay</a>
        </div>
    </div>

    <script>
        async function handleRegister() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const role_id = document.getElementById('role').value;

            if(!username || !password) {
                alert("Vui lòng nhập đầy đủ thông tin!");
                return;
            }

            try {
                // Gọi API đăng ký
                const res = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        username: username, 
                        password: password, 
                        role_id: role_id 
                    })
                });

                const data = await res.json();

                if (res.ok) {
                    alert("Đăng ký thành công! Hãy đăng nhập.");
                    window.location.href = '/login'; // Chuyển hướng về trang Login
                } else {
                    alert("Lỗi: " + (data.message || "Không thể đăng ký"));
                }
            } catch (err) {
                console.error(err);
                alert("Lỗi kết nối Server");
            }
        }
    </script>
</body>
</html>